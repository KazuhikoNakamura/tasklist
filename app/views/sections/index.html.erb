<h1>全作業一覧</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th colspan="3">作業終了期限</th>
    </tr>
    <tr>
      <th>作業内容</th>
      <th>タスクID</th>
      <th>進捗</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td class="sectionTitle"><%= section.section_title %></td>
        <td colspan="3"><%= section.due_time.strftime('%Y年%m月%d日 %H:%M') %></td>
      </tr>
      <tr>
        <td><%= section.contents %></td>
        <td><%= section.task_id %></td>
        <td>
          <% if section.status %>
            済
          <% else %>
            未
          <% end %>
        </td>
        <td><%= link_to 'Show', section %><br><%= link_to 'Edit', edit_section_path(section) %><br><%= link_to '削除', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく作業を追加する', new_section_path %>
<br><br>
<%= link_to 'タスク一覧に戻る', tasks_path %>

<h1>全作業一覧</h1>

<table>
  <thead>
    <tr>
      <th>作業終了期限</th>
      <th>作業内容</th>
      <th>タスクのID</th>
      <th>タスク名</th>
      <th>作業の進捗</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.due_time.strftime('%Y年%m月%d日 %H:%M') %></td>
        <td><%= section.contents %></td>
        <td><%= section.task_id %></td>
        <td><%= section.section_title %></td>
        <td><%= section.status %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to '削除', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく作業を追加する', new_section_path %>
<br><br>
<%= link_to 'タスク一覧に戻る', tasks_path %>

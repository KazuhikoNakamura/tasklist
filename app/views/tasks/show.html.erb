<p id="notice"><%= notice %></p>

<h1><%= @task.title %>&emsp;<span>(ID: <%= @task.id %> )</span></h1>
<table>
    <% @task.sections.each do |section| %>
      <tr>
        <th><%= section.id %></th>
        <th>
          <% if section.status %>
            <%= link_to "未達成にする", sections_toggle_status_path(id: section.id) %>
          <% else %>
            <%= link_to "達成にする", sections_toggle_status_path(id: section.id) %>
          <% end %>
        <!-- <th><%= check_box_tag "section[status]", !section.status, section.status %></th> -->
        <td><%= link_to section.section_title, section_path(id: section.id) %></td>
        <td><%= section.due_time %></td>
        <td><%= link_to '削除', section_path(id: section.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </table>
